<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data class="FragmentZoneTypeListBinding">

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.gemini.energy.presentation.zone.list.TypeListViewModel" />

        <variable
            name="callbacks"
            type="com.gemini.energy.presentation.zone.list.adapter.TypeListAdapter.OnZoneTypeClickListener" />

        <variable
            name="fabClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="showCreate"
            type="java.lang.Boolean" />

    </data>

    <FrameLayout
        android:layout_width="match_parent" android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerView"

            app:zoneTypeList="@{viewModel.result}"
            app:zoneTypeListCallback="@{callbacks}"

            tools:listitem="@layout/fragment_type_list_item" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"

            android:onClick="@{fabClick}"

            android:background="@android:color/holo_green_light"
            app:backgroundTint="@android:color/holo_green_light"
            app:srcCompat="@drawable/ic_icon_add" />

    </FrameLayout>


</layout>